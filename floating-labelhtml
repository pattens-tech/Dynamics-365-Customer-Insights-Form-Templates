<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Tailwind Floating Label Form with Validation</title>
<script src="https://cdn.tailwindcss.com"></script>
<style>
  /* Show error only when input is invalid AND touched */
  .touched:invalid {
    border-color: #f87171; /* red-500 */
  }
  .touched:invalid + label {
    color: #f87171; /* red-500 */
  }
  .touched:invalid ~ .error-msg {
    display: flex;
  }
</style>
</head>
<body class="bg-gray-100 p-10 font-sans">
<div class="max-w-3xl mx-auto bg-white p-10 shadow-sm rounded-md">

  <!-- EMAIL FIELD -->
  <div class="relative mb-10">
    <input 
      type="email"
      id="email"
      name="email"
      placeholder=" "
      required
      class="peer w-full border-2 border-gray-300 bg-white rounded-md px-6 pt-6 pb-3 text-lg text-black placeholder-transparent
             focus:border-black focus:outline-none transition-all duration-300 ease-in-out"
    />
    <label 
      for="email"
      class="absolute left-6 top-5 text-[22px] text-black font-medium bg-white px-2 transition-all duration-300 ease-in-out
             transform origin-left
             peer-placeholder-shown:top-6 peer-placeholder-shown:scale-100 peer-placeholder-shown:text-gray-400
             peer-focus:top-[-12px] peer-focus:scale-90
             peer-[&:not(:placeholder-shown)]:top-[-12px] peer-[&:not(:placeholder-shown)]:scale-90
             peer-focus:text-black">
      Email<span class="text-red-600 ml-1">*</span>
    </label>

    <div class="error-msg hidden items-center gap-2 mt-2 text-base text-red-500">
      <span class="text-2xl leading-none">⚠</span>
      <span>Enter a valid email address.</span>
    </div>
  </div>

  <!-- LASTNAME FIELD -->
  <div class="relative mb-10">
    <input 
      type="text"
      id="lastname"
      name="lastname"
      placeholder=" "
      required
      class="peer w-full border-2 border-gray-300 bg-white rounded-md px-6 pt-6 pb-3 text-lg text-black placeholder-transparent
             focus:border-black focus:outline-none transition-all duration-300 ease-in-out"
    />
    <label 
      for="lastname"
      class="absolute left-6 top-5 text-[22px] text-black font-medium bg-white px-2 transition-all duration-300 ease-in-out
             transform origin-left
             peer-placeholder-shown:top-6 peer-placeholder-shown:scale-100 peer-placeholder-shown:text-gray-400
             peer-focus:top-[-12px] peer-focus:scale-90
             peer-[&:not(:placeholder-shown)]:top-[-12px] peer-[&:not(:placeholder-shown)]:scale-90
             peer-focus:text-black">
      Last name<span class="text-red-600 ml-1">*</span>
    </label>

    <div class="error-msg hidden items-center gap-2 mt-2 text-base text-red-500">
      <span class="text-2xl leading-none">⚠</span>
      <span>Field is required.</span>
    </div>
  </div>

</div>

<script>
  // Add 'touched' class on blur to show errors only after leaving the field
  document.querySelectorAll('input').forEach(input => {
    input.addEventListener('blur', () => {
      input.classList.add('touched');
    });
  });
</script>
</body>
</html>
