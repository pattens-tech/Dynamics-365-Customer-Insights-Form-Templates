{
  "extends": ["html-validate:recommended"],
  "rules": {
    "void-style": "off",
    "no-inline-style": "off",
    "require-sri": "off",
    "no-trailing-whitespace": "off",
    "attr-quotes": "error",
    "doctype-html": "error",
    "no-dup-attr": "error",
    "no-dup-id": "error",
    "element-required-attributes": "error",
    "element-permitted-content": "warn",
    "meta-refresh": "off"
  },
  "elements": [
    "html5"
  ]
}
